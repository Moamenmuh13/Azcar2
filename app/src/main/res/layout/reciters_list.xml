<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/block"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/mainLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/RecitersName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/_5sdp"
            android:fontFamily="@font/shahd"
            android:text="@string/aboBakr"
            android:textColor="#111"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/sora_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/RecitersName"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/_5sdp"
            android:fontFamily="@font/shahd"
            android:text="@string/sora114Number"
            android:textColor="#111"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rewaya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/RecitersName"
            android:layout_margin="@dimen/_5sdp"
            android:layout_toLeftOf="@id/sora_num"
            android:fontFamily="@font/shahd"
            android:text="@string/rewaya"
            android:textColor="#111"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#989898" />

    </RelativeLayout>

</RelativeLayout>

